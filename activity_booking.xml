<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.booking">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_phonee"
        android:text="03005346865"
        android:layout_marginTop="8dp"
        android:inputType="phone"/>
    <EditText
        android:hint="SELECT DATE"
        android:id="@+id/date_input"
        android:inputType="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <EditText
        android:hint="SELECT TIME"
        android:id="@+id/time_input"
        android:inputType="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:hint="SELECT DATE and Time"
        android:id="@+id/date_time_input"
        android:inputType="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitStart"
        android:adjustViewBounds="true"
        android:id="@+id/hres"
        android:src="@drawable/polakzx"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_messagee"
        android:hint="Enter Name, Food,date,Number of people"
        android:inputType="textLongMessage"
        android:padding="12dp"
        android:gravity="top"
        android:layout_marginTop="8dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_sends"
        android:text="Booking"
        android:layout_gravity="center_horizontal"/>


</LinearLayout>