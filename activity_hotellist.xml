<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hotellist">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/threestar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint=" 3 star hotel"
            android:ems="10" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:id="@+id/hpof"
            android:src="@drawable/pof"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:id="@+id/hcontinantal"
            android:src="@drawable/continantal"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:id="@+id/hlahorepalace"
            android:src="@drawable/lahorepalace"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:id="@+id/samimabuckethall"
            android:src="@drawable/samimabuckethall"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:id="@+id/hiltonmarriagehall"
            android:src="@drawable/hiltonmarriagehall"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:id="@+id/mashhallah"
            android:src="@drawable/mashallahmarriagehall"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:id="@+id/cituhallquetta"
            android:src="@drawable/cituhallquetta"/>
        <EditText
            android:id="@+id/fourstar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint=" 4 star hotel"
            android:ems="10" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:id="@+id/marriethotel"
            android:src="@drawable/marriethotel"/>


        <EditText
            android:id="@+id/fivestar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint=" 5 star hotel"
            android:ems="10" />

        <ImageView
            android:id="@+id/movenpick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:src="@drawable/movenpickhotelkarachi"/>



















    </LinearLayout>
    

</ScrollView>