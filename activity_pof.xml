<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ali"
    tools:context="com.Pof">
    <TextView
        android:id="@+id/quaid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="25sp"
        android:text="Quaid Avenue, Officers Colony, Wah Cantt, Rawalpindi"/>
    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="25sp"
        android:text="(051) 4539983"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/pof"

        />
    <Button
        android:id="@+id/bt_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="call"
        />
    <Button
        android:id="@+id/bt_rew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ads"
        />
    <Button
        android:id="@+id/loc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="loc and branches"
        />
    <Button
        android:id="@+id/mp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="menu pof"
        />



</LinearLayout>